{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["es2016", "dom"],
    "typeRoots": [
      "./node_modules/@figma",
      "./node_modules/@types",
      "./src/types"

    ],
    "moduleResolution": "node",
    "strict": true,
    "outDir": ".",
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
    
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.html","src/**/*.tsx","src/**/*"],
  "exclude": ["node_modules"]
}


